section#product-interior.page-section.content-block.content-block--product
	.wrapper.content-block__wrapper
		.content-block__body
			.content-block__title
				h2.subtitle Интерьер

			.content-block__cont
				article.product-item
					.product-item__photo
						+image('img/product-inner/interior-1.webp', '744', '420', ' ').product-item__photo-img

						span.product-item__photo-text белый салон <br> с серой строчкой

					.product-item__desc
						.product-item__text
							span.product-item__title Салон из натуральной кожи. <br> Прослужит долгие годы

						.product-item__cont
							.product-info
								.product-info__item
									.product-info__el
										span.product-info__label Цвет салона
										.product-info__color
											span.product-info__color-el(style="background-color: #CDC5B3")
											span.product-info__color-el(style="background-color: #292929")
											span.product-info__color-el(style="background-color: #A7A7A7")

				article.product-item
					.product-item__photo
						+image('img/product-inner/interior-2.webp', '744', '420', ' ').product-item__photo-img

					.product-item__desc
						.product-item__text
							span.product-item__title Многофункциональная <br> сенсорная панель приборов

						.product-item__cont
							.product-info
								.product-info__item
									.product-info__el
										span.product-info__label Навигация
										span.product-info__cont GPS
									.product-info__el
										span.product-info__label Мультимедиа
										span.product-info__cont Apple CarPlay
